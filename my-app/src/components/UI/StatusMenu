  const currentEntity = selectedTab === 'player' ? player : companions[selectedTab];

  // ÁµåÈ®ìÂÄ§„ÅÆÂâ≤ÂêàË®àÁÆó
  const expPercent = Math.min(100, (currentEntity.exp / currentEntity.maxExp) * 100);

